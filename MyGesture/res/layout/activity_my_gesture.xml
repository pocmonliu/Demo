<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:baselineAligned="false">
        <RelativeLayout
        	android:id="@+id/front_left"
        	android:layout_width="0dp"
        	android:layout_height="match_parent"
        	android:layout_weight="1"
        	android:text="左前胎" 
        	android:background="#FFFF0000">

        	<TextView
            	android:id="@+id/tv_front_left_operation"
            	android:layout_width="100dp"
            	android:layout_height="50dp"
            	android:layout_alignParentTop="true"
            	android:layout_centerHorizontal="true"
            	android:text="" />
			
   		 </RelativeLayout>
   		 <RelativeLayout
        	android:id="@+id/front_right"
        	android:layout_width="0dp"
        	android:layout_height="match_parent"
        	android:layout_weight="1"
        	android:text="右前胎" 
        	android:background="#FFFFFF99">

        	<TextView
            	android:id="@+id/tv_front_right_operation"
            	android:layout_width="100dp"
            	android:layout_height="50dp"
            	android:layout_alignParentTop="true"
            	android:layout_centerHorizontal="true"
            	android:text="" />

    	</RelativeLayout>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:baselineAligned="false">
            <RelativeLayout
        		android:id="@+id/rear_left"
        		android:layout_width="0dp"
        		android:layout_height="match_parent"
        		android:layout_weight="1"
        		android:text="左后胎" 
        		android:background="#F00FFFFF">

        		<TextView
            		android:id="@+id/tv_rear_left_operation"
            		android:layout_width="100dp"
            		android:layout_height="50dp"
            		android:layout_alignParentTop="true"
            		android:layout_centerHorizontal="true"
            		android:text="" />

    		</RelativeLayout>
    		
    		<RelativeLayout
        		android:id="@+id/rear_right"
        		android:layout_width="0dp"
        		android:layout_height="match_parent"
        		android:layout_weight="1"
        		android:text="左后胎" 
        		android:background="#FF0000FF">

        		<TextView
            		android:id="@+id/tv_rear_right_operation"
            		android:layout_width="100dp"
            		android:layout_height="50dp"
            		android:layout_alignParentTop="true"
            		android:layout_centerHorizontal="true"
            		android:text="" />

    		</RelativeLayout>
    </LinearLayout>
    
</LinearLayout>
