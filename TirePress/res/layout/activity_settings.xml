<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="设置" 
        android:gravity="left"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/tv_high_pressure_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="高压报警值（Bar）" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <SeekBar
        	android:id="@+id/sb_high_pressure"
        	android:layout_width="400dp"
        	android:layout_height="wrap_content" 
        	android:max="4"/>
        <TextView
        	android:id="@+id/tv_high_pressure_value"
        	android:layout_width="20dp"
        	android:layout_height="wrap_content"/>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_low_pressure_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="低压报警值（Bar）" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:orientation="horizontal">
        <SeekBar
        	android:id="@+id/sb_low_pressure"
        	android:layout_width="400dp"
        	android:layout_height="wrap_content" 
        	android:max="4"/>
        <TextView
        	android:id="@+id/tv_low_pressure_value"
        	android:layout_width="20dp"
        	android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_high_temperature_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="高温报警值（℃）" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:orientation="horizontal">
        <SeekBar
        	android:id="@+id/sb_high_temperature"
        	android:layout_width="400dp"
        	android:layout_height="wrap_content"
        	android:max="10" />
       <TextView
        	android:id="@+id/tv_high_temperature_value"
        	android:layout_width="20dp"
        	android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>
